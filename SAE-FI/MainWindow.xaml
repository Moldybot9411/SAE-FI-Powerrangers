<ui:FluentWindow x:Class="SAE_FI.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:local="clr-namespace:SAE_FI"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:pages="clr-namespace:SAE_FI"
                 Title="MainWindow"
                 WindowState="Maximized"
                 WindowStartupLocation="CenterScreen"
                 WindowStyle="None">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ui:TitleBar Grid.Row="0" Title="Temperatur Analyse SAE-FI" />

        <ui:NavigationView
            Grid.Row="1"
            x:Name="RootNavigation"
            Margin="4"
            PaneDisplayMode="Top"
            IsBackButtonVisible="Collapsed">
            
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="Home" Icon="{ui:SymbolIcon Home24}" TargetPageType="{x:Type pages:HomePage}"/>
                <ui:NavigationViewItem Content="Analysis" Icon="{ui:SymbolIcon ChartMultiple24}" TargetPageType="{x:Type pages:AnalysisPage}"/>
            </ui:NavigationView.MenuItems>

            <ui:NavigationView.FooterMenuItems>
                <ui:Button Margin="0 0 4 0" Icon="{ui:SymbolIcon Delete12}" Click="DatenLöschen"/>
                <ui:Button Content="Import CSV" Icon="{ui:SymbolIcon ArrowDownload16}" Click="ImportCSV"/>
            </ui:NavigationView.FooterMenuItems>
        </ui:NavigationView>
    </Grid>
</ui:FluentWindow>