<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Color x:Key="PrimaryBlue">#0471A6</Color>
    <Color x:Key="SecondaryBlue">#10ABF9</Color>


    <Color x:Key="PrimaryRed">#E3170A</Color>
    <Color x:Key="SecondaryRed">#F7483B</Color>

    <Color x:Key="PrimaryBlack">#222518</Color>
    <Color x:Key="PrimaryGray">#BDC2BF</Color>
    <Color x:Key="SecondaryGray">#989C94</Color>

    <SolidColorBrush x:Key="PrimaryBrushBlue" Color="{StaticResource PrimaryBlue}" />
    <SolidColorBrush x:Key="SecondaryBrushBlue" Color="{StaticResource SecondaryBlue}" />
    <SolidColorBrush x:Key="PrimaryBrushRed" Color="{StaticResource PrimaryRed}" />
    <SolidColorBrush x:Key="SecondaryBrushRed" Color="{StaticResource SecondaryRed}" />
    <SolidColorBrush x:Key="PrimaryBrushBlack" Color="{StaticResource PrimaryBlack}" />
    <SolidColorBrush x:Key="PrimaryBrushGray" Color="{StaticResource PrimaryGray}" />
    <SolidColorBrush x:Key="SecondaryBrushGray" Color="{StaticResource SecondaryGray}" />
    
</ResourceDictionary>

<!-- to add color: Background="{StaticResource SecondaryBrushBlue}" -->