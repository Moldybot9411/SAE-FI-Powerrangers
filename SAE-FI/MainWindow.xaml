<Window x:Class="SAE_FI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAE_FI"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    <Grid Width="300"
          Height="300">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Grid.RowSpan="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="30"
                   FontFamily="Arial">
            Temparaturanalyse
        </TextBlock>

        <Button
            Style="{StaticResource PrimaryButton}"
            Height="40"
            Name="buttonimportCSV"
            Grid.Row="2"
            Grid.RowSpan="1"
            Click="ImportCSV">ImportCSV</Button>
        <Button
            Style="{StaticResource SecondaryButton}"
            Height="40"
            Name="buttonGetTemperatureStats"
            Grid.Row="3"
            Grid.RowSpan="1"
            Click="GetTemperatureStats">GetTemperatureStats</Button>
        <Button
            Style="{StaticResource SecondaryButton}"
            Height="40"
            Name="buttonDatenLöschen"
            Grid.Row="4"
            Grid.RowSpan="1"
            Click="DatenLöschen">DatenLöschen</Button>
    </Grid>
</Window>
