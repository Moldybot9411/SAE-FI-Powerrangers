<Window x:Class="SAE_FI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAE_FI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Width="700" Height="300">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Grid.RowSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="50" FontFamily="Comic Sans MS">
            Hello, SAE!
        </TextBlock>
        
        
        <Button Width="70" Height="20" Name="buttonGetTemperatureStats" Grid.Row="3" Grid.RowSpan="1" Click="GetTemperatureStats">GetTemperatureStats</Button>
        <TextBlock Grid.Row="2" Grid.RowSpan="7" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontFamily="Comic Sans MS" >
            Bitte wählen sie die Datei aus in welcher  die stammdaten Laden liegen 
        </TextBlock>
        <Button Width="70" Height="20" Name="buttonfilepicker" Grid.Row="3" Grid.RowSpan="1" Click="Filepicker">Filepicker</Button>
    </Grid>
</Window>
